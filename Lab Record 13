<!DOCTYPE html>
<html>
<head>
    <title>Functions and Scope Demo</title>
</head>
<body>

<h2>JavaScript Functions & Scope</h2>
<p id="output"></p>

<script>
    let result = "";

    /* ===== User-Defined Function ===== */
    function addNumbers(a, b) {
        return a + b;
    }

    // Function invocation
    let sum = addNumbers(10, 20);
    result += "Sum using user-defined function: " + sum + "<br><br>";

    /* ===== Scope Demonstration ===== */

    // var has function scope
    function varScope() {
        var x = 10;
        if (true) {
            var x = 20; // same variable
        }
        result += "var value: " + x + "<br>";
    }
    varScope();

    // let has block scope
    function letScope() {
        let y = 10;
        if (true) {
            let y = 20; // different variable
            result += "let inside block: " + y + "<br>";
        }
        result += "let outside block: " + y + "<br>";
    }
    letScope();

    // const has block scope and fixed value
    function constScope() {
        const z = 30;
        result += "const value: " + z + "<br>";
    }
    constScope();

    document.getElementById("output").innerHTML = result;
</script>

</body>
</html>
